<Window x:Class="Aplicacion_Ejemplo.Window4"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Window4" Height="620" Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="#F3F5F7">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="56"/>
            <!-- barra superior -->
            <RowDefinition Height="Auto"/>
            <!-- header -->
            <RowDefinition Height="*"/>
            <!-- contenido -->
        </Grid.RowDefinitions>

        <!-- Barra superior -->
        <Grid Grid.Row="0" Background="#163C8F">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="120"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="MISALA UDD"
               Foreground="White"
               VerticalAlignment="Center"
               FontSize="15"
               FontWeight="Bold"
               Margin="16,0"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left"
                VerticalAlignment="Center" Grid.Column="1" Margin="10,0,0,0">
                <Button x:Name="btn_inicio" Content="Inicio" Foreground="White" Background="Transparent" BorderThickness="0" Width="65" Cursor="Hand" Click="btn_inicio_Click"/>
                <Button x:Name="btn_edificio" Content="Edificios" Foreground="White" Background="Transparent" BorderThickness="0" Margin="20,0" VerticalAlignment="Center" FontWeight="SemiBold" Width="41" Cursor="Hand" Click="btn_edificio_Click"/>
                <Button x:Name="btn_reserva" Content="Reservas" Foreground="White" Background="Transparent" BorderThickness="0" Margin="20,0" VerticalAlignment="Center" Cursor="Hand" Click="btn_reserva_Click"/>
                <Button x:Name="btn_perfil" Content="Perfil" Foreground="White" Background="Transparent" BorderThickness="0" Margin="20,0" VerticalAlignment="Center" Cursor="Hand" Click="btn_perfil_Click"/>
            </StackPanel>

            <Button x:Name="btn_logout" Content="Salir" Foreground="White"
            Background="Transparent" BorderThickness="0" Margin="24,0,60,0"
            VerticalAlignment="Center" Cursor="Hand" Grid.Column="2"
            Click="btn_logout_Click"/>
        </Grid>

        <!-- Encabezado -->
        <StackPanel Grid.Row="1" Margin="60,18,60,0">
            <TextBlock Text="Gestión de Reservas" FontSize="18" FontWeight="Bold" Foreground="#2B2F36" Margin="0,0,0,4"/>
            <TextBlock Text="Reserva salas y administra tus reservas" FontSize="12" Foreground="#7B8086"/>
        </StackPanel>

        <!-- Formulario (maqueta visual) -->
        <Grid Grid.Row="2" Margin="60,18,60,24">
            <Border Background="White" CornerRadius="8" BorderBrush="#E6E9EE" BorderThickness="1" Padding="20" HorizontalAlignment="Left" Width="920">
                <StackPanel>
                    <!-- Pestañas visuales -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <Border Background="#F6F7F9" CornerRadius="12" Padding="6,4" Margin="0,0,8,0" Width="220" HorizontalAlignment="Left">
                            <TextBlock Text="Nueva Reserva" FontSize="12" Foreground="#2B2F36"/>
                        </Border>
                        <Border Background="#EFEFF1" CornerRadius="12" Padding="6,4" Width="220">
                            <TextBlock Text="Todas las Reservas" FontSize="12" Foreground="#7B8086"/>
                        </Border>
                    </StackPanel>

                    <!-- Formulario -->
                    <Grid Margin="0,8,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Edificio (TextBox en vez de ComboBox) -->
                        <StackPanel Grid.Column="0" Margin="0,0,12,0">
                            <TextBlock Text="Edificio" FontSize="11" Foreground="#7B8086"/>
                            <TextBox Height="30" Margin="0,6,0,0" Text="Selecciona un edificio" Foreground="#7B8086"/>
                        </StackPanel>

                        <!-- Sala (TextBox en vez de ComboBox) -->
                        <StackPanel Grid.Column="1" Margin="0,0,12,0">
                            <TextBlock Text="Sala" FontSize="11" Foreground="#7B8086"/>
                            <TextBox Height="30" Margin="0,6,0,0" Text="Selecciona una sala" Foreground="#7B8086"/>
                        </StackPanel>

                        <!-- Fecha -->
                        <StackPanel Grid.Column="2" Margin="0,0,12,0">
                            <TextBlock Text="Fecha (AAAA-MM-DD)" FontSize="11" Foreground="#7B8086"/>
                            <TextBox Height="30" Margin="0,6,0,0" Text="dd / mm / yyyy"/>
                        </StackPanel>

                        <!-- Hora inicio -->
                        <StackPanel Grid.Column="3">
                            <TextBlock Text="Hora de Inicio (Duración 1 hora)" FontSize="11" Foreground="#7B8086"/>
                            <TextBox Height="30" Margin="0,6,0,0" Text="-- : --"/>
                        </StackPanel>
                    </Grid>

                    <!-- Carrera -->
                    <StackPanel Margin="0,8,0,12">
                        <TextBlock Text="Carrera" FontSize="11" Foreground="#7B8086"/>
                        <TextBox Height="36" Margin="0,6,0,0" Text="Describe la carrera que reservara..." />
                    </StackPanel>
                    <Button Content="Crear Reserva" Height="36" Background="#133B8A" Foreground="White" BorderBrush="#133B8A" Padding="10" Width="736"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
