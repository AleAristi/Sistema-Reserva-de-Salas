<Window x:Class="Frontend_Reserva_Salas.RegistroWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registro" Height="620" Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="#FFEEE9E9">

    <Grid Background="#FFEEE9E9">

        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Logo -->
                <RowDefinition Height="Auto"/>
                <!-- Titulo -->
                <RowDefinition Height="Auto"/>
                <!-- Subtitulo -->
                <RowDefinition Height="Auto"/>
                <!-- Usuario -->
                <RowDefinition Height="Auto"/>
                <!-- Nombre -->
                <RowDefinition Height="Auto"/>
                <!-- Rut -->
                <RowDefinition Height="Auto"/>
                <!-- Tipo -->
                <RowDefinition Height="Auto"/>
                <!-- Carrera/Función -->
                <RowDefinition Height="Auto"/>
                <!-- Password -->
                <RowDefinition Height="Auto"/>
                <!-- Boton Registrar -->
            </Grid.RowDefinitions>

            <!-- Fondo -->
            <Border Grid.RowSpan="10" Background="White" CornerRadius="20"
                    BorderBrush="#FF636365" BorderThickness="2"
                    Padding="40,20" Width="300" Margin="0,0,0,-60"/>

            <!-- Logo -->
            <Image Grid.Row="0" HorizontalAlignment="Center"
                   Width="40" Height="40" Source="Logo_2.png"
                   Margin="0,21,0,10" RenderTransformOrigin="0.583,1.771"/>

            <!-- Título -->
            <TextBlock Grid.Row="1" Text="Crear Cuenta"
                       Foreground="#2244ED" FontSize="16" FontWeight="SemiBold"
                       HorizontalAlignment="Center" Margin="0,21,0,0" Height="20" VerticalAlignment="Top"/>

            <!-- Subtítulo -->
            <TextBlock Grid.Row="2" TextAlignment="Center"
                       Foreground="#837F7F" Margin="0,10,0,0">
                Registro de Usuarios
                <LineBreak/>Mi Sala UDD
            </TextBlock>

            <!-- Usuario -->
            <StackPanel Grid.Row="3" Margin="0,5">
                <TextBlock Text="Correo UDD:" Width="199"/>
                <TextBox x:Name="txtUsuario" Width="200"/>
            </StackPanel>

            <!-- Nombre -->
            <StackPanel Grid.Row="4" Margin="0,5">
                <TextBlock Text="Nombre Completo:" Width="199"/>
                <TextBox x:Name="txtNombre" Width="200"/>
            </StackPanel>

            <!-- Rut -->
            <StackPanel Grid.Row="5" Margin="0,5">
                <TextBlock Text="RUT:" Width="199"/>
                <TextBox x:Name="txtRut" Width="200"/>
            </StackPanel>

            <!-- Tipo -->
            <StackPanel Grid.Row="6" Margin="0,5">
                <TextBlock Text="Tipo Usuario:" Width="199"/>
                <ComboBox x:Name="cbTipo" Width="200"
                          SelectionChanged="CbTipo_Changed">
                    <ComboBoxItem Content="Alumno"/>
                    <ComboBoxItem Content="Profesor"/>
                </ComboBox>
            </StackPanel>

            <!-- Carrera o Función -->
            <StackPanel Grid.Row="7" Margin="0,5">
                <TextBlock x:Name="lblCarreraFuncion" Text="Carrera:" Width="199"/>
                <ComboBox x:Name="cbCarreras" Width="200"/>
            </StackPanel>


            <!-- Password -->
            <StackPanel Grid.Row="8" Margin="0,5">
                <TextBlock Text="Contraseña:" Width="199"/>
                <PasswordBox x:Name="txtPassword" Width="200"/>
            </StackPanel>

            <!-- Botón Registrar -->
            <Button Grid.Row="9" Content="Registrar"
                    Width="200" Height="30" Margin="0,10,0,0"
                    Background="#4C4AE6" Foreground="White"
                    Click="BtnRegistrar_Click"/>

        </Grid>

    </Grid>
</Window>
